<section id='login-form' class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for @user do |f| %>
        <fieldset>
          <legend>Signup</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="name">Name:</label>
            <div class="col-md-8">
              <%= f.text_field :name, required: true, placeholder: "First Name", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="dob">Date of Birth:</label>
            <div class="col-md-8">
              <%= f.date_field :dob, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="sex">Sex:</label>
            <div class="col-md-8">
              <%= f.text_field :sex, required: true, placeholder: "Male/Female", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="email">Email</label>
            <div class="col-md-8">
              <%= f.text_field :email, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="password">Password</label>
            <div class="col-md-8">
              <%= f.password_field :password, required: true, placeholder: "Password", class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Sign up", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>
</section>