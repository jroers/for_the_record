<section id='new-result-form' class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

      <%= form_for @result, url: user_profile_path do |f| %>
        <fieldset>
          <legend>New Result</legend>

          <div class="form-group">
            <label class="col-md-4 control-label" for="kind">Kind</label>
            <div class="col-md-8">
              <%= f.text_field :kind, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <label class="col-md-4 control-label" for="value">Value</label>
            <div class="col-md-8">
              <%= f.text_field :value, required: true, class: "form-control" %><br>
            </div>
          </div>

          <div class="form-group">
            <div class="col-md-12">
              <%= f.submit "Save New Result", class: "btn btn-success" %>
            </div>
          </div>
          
        </fieldset>
      <% end %>

    </div>
  </div>
</section>